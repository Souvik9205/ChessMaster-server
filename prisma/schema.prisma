generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid 
  username  String   @unique @db.VarChar(50) 
  password  String

  matches   Int      @default(0)
  wins      Int      @default(0) 
  draws     Int      @default(0) 
  winrate   Float    @default(0.0)

  createdAt DateTime @default(now())
}

model Game {
  id         String   @id @default(uuid()) @db.Uuid
  player1    String   
  player2    String?  
  winnerId   String?  
  createdAt  DateTime @default(now()) 
  moves      String[] 
}
